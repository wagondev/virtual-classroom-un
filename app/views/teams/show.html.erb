

<div class="container-fluid" id="teamsFree">
	<div class="">
		<p id="notice"><%= notice %></p>
	</div>
	
	<div class="">
		<div class="row">
			<% if @team.logo.present? == true %>
			<div class="col-md-2">
			
				<%= image_tag( @team.logo_url, class:"img-responsive img-rounded") %>
			</div>
			<% end %>
			<div class="col-md-4 col-md-offset-6">
				<h2 class="">Equipo:
					<strong><%= @team.name %></strong></h2>
					<p>
					Numero de integrantes:
					<strong><%= @team.max_member %></strong>
				</p>
					<p>
					Descripcion:
					<strong><%= @team.description %></strong>
				</p>
			</div>
		</div>
		<br>
		<br>
		<div class="">
			<div class="row">
				<div class="col-md-8">
					<div class="panel panel-danger">
						<div class="panel-heading">
							<h4 class="text-center">Notificaciones y mensajes</h4>
						</div>
						<div class="panel panel-body"></div>
					</div>
				</div>
				<div class="col-md-4">
						<div class="row">
							<div class="col-md-12">
								<div class="panel panel-info">
									<div class="panel-heading">
										<h5 class="text-center">Integrantes</h5>
									</div>
									<div class="panel-body">
										<div class="list-group">
											<% @userJoin.each do |u| %>
											<%= link_to u.name, {}, class: "list-group-item list-group-item-info" %>
											<%end%>

									
										</div>
									</div>
								</div>
							</div>
							<div class="col-md-12">
								<div class="panel panel-success">
									<div class="panel-heading">
										<h5 class="text-center">Invitaciones pendientes</h5>
									</div>
									<div class="panel-body">
										
									</div>
								</div>
							</div>
						</div>
					</div>
			</div>
		</div>
			

		
		</div>
	</div>

	<%= link_to 'Edit', edit_team_path(@team) %> |
	<%= link_to 'Back', teams_path %>