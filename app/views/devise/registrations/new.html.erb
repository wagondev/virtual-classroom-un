<h2 class="text-center">Registrate</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="container">
    <div class="form-group row">
      <div class="col-md-4">
        <form action="">
          <div class="form-group">
            <div class="field">
              <%= f.label :email, "Ingresa tu correo electrónico:", class:"label-control" %><br />
              <%= f.email_field :email, autofocus: true, class:"form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="field">
              <%= f.label :carrera,"Carrera:", class:"label-control" %><br />
              <%= f.select(;):career, autofocus: true, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="field">
              <%= f.label :Estudiante, class:"label-control" %>
              <%= f.check_box :student, autofocus: true, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>
          
          <div class="field">
            <%= f.label :confirma_la_contraseña %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
            <p>
          <div class="actions">
            <%= f.submit "Crear cuenta" %>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
