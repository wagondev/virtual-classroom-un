

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="container">
    <div class="form-group row">
      <div class="col-md-offset-8 col-md-4">
        <h2 class="text-center">Registrate</h2>
        <br>
        <br>
        <div class="">
          <div class="form-group">
            <div class="field">
              <%= f.label :email, "Ingresa tu correo electrónico", class:"label-control" %><br />
              <%= f.email_field :email, autofocus: true, class:"form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="field">
              <%= f.label :carrera,"Carrera", class:"label-control" %><br />
              <%= f.select(:career, Career.all.collect {|a| [a.name, a.id]}, {},{class:"form-control"})%>
            </div>
          </div>
          
          <div class="form-group">
            <div class="text-left">
              <div class="field">
                <%= f.label :rol, "Rol academico", class:"label-control" %>
                <%= f.label :rol, "Estudiante", class:"radio-inline" %>
                <%= f.radio_button :student, autofocus: true, class: "form-control" %>
                <%= f.label :rol, "Profesor", class:"radio-inline" %>
                <%= f.radio_button :student, autofocus: true, class: "form-control" %>
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <div class="field">
              <%= f.label :password, "Contraseña"%>
              <% if @minimum_password_length %>
              <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="field">
              <%= f.label :confirm, "Confirma la contraseña" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
            </div>
          </div>
            <br>
          <div class="form">
            <div class="actions">
              <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
              <i class="icon-ok icon-white">Crear cuenta</i><% end %>
            <!--             <%= f.submit "Crear cuenta" %> -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<br>
<div class="text-right">
  <%= render "devise/shared/links" %>
  </div>

