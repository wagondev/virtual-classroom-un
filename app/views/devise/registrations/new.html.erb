  <div class="container-fluid" id="registroNuevo">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


    <div class="form-group row col-md-5">
      <div class="col-md-12" id="">
        <br>
        <br>
        <%= image_tag('work.png', class:"img-responsive img-rounded") %>
      </div>
    </div>
    <div class="form-group row col-md-7 ">
      <div class=" col-md-7 col-md-offset-4">
        <h2 class="text-center">Registrate</h2>
        <br>
        <br>
        <div class="">
          <div class="form-group ">
            <div class="field">
              <%= f.label :email, "Ingresa tu correo electrónico", class:"label-control" %><br />
              <%= f.email_field :email, autofocus: true, :required => true, class:"form-control" %>
            </div>
          </div>
          
          <div class="form-group ">
            <div class="field">
              <%= f.label :carrera,"Carrera", class:"label-control" %><br />
              <%= f.select(:career, Career.all.collect {|a| [a.name, a.id]}, {},{class:"form-control"})%>
            </div>
          </div>
          
          <div class="form-group ">
            <div class="text-center">
              <div class="field">
                <%= f.label :rol, "Rol academico", class:"label-control" %>
                <%= label :rol, "Estudiante", class:"radio-inline", value: true %>
                <%= f.radio_button :student, true, :checked => true, :value => true %>
                <%= label :rol, "Profesor", class:"radio-inline", value: false %>
                <%= f.radio_button :student, false, :value => false %>
              </div>
            </div>
          </div>
          
          <div class="form-group ">
            <div class="field">
              <%= f.label :password, "Contraseña"%>
              <% if @minimum_password_length %>
              <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", :required => true, class:"form-control" %>
            </div>
          </div>
          
          <div class="form-group ">
            <div class="field">
              <%= f.label :confirm, "Confirma la contraseña" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, class:"form-control" %>
            </div>
          </div>
            <br>
          <div class="form ">
            <div class="actions">
              <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
              <i class="icon-ok icon-white">Crear cuenta</i><% end %>

            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
<% end %>
<br>

  


