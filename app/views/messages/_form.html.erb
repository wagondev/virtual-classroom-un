<%= form_with(model: message, local: true) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :member_id %>
    <%= form.text_field :member_id, id: :message_member_id %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :message_title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :message_body %>
  </div>

  <div class="field">
    <%= form.label :latutude %>
    <%= form.text_field :latutude, id: :message_latutude %>
  </div>

  <div class="field">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, id: :message_longitude %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :message_address %>
  </div>

  <div class="field">
    <%= form.label :meeting %>
    <%= form.datetime_select :meeting, id: :message_meeting %>
  </div>

  <div class="field">
    <%= form.label :document %>
    <%= form.file_field :document, id: :message_document, multiple: true %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :type, id: :message_type %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
