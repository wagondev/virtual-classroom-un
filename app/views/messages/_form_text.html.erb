<div class="container">
<div class="row col-md-6"><%= form_with(model: message, local: true) do |form| %>
    <% if message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>
  
        <ul>
        <% message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <div class="field">
        <%= form.label :title, "Ingresa el tìtulo", class:"control-label"%>
        <em>Recuerde que el tamaño máximo es de 140 caracteres</em>
        <%= form.text_field :title, id: :message_title, class:"form-control"%>
      </div>
    </div>
  
    <div class="form-group">
      <div class="field">
        <%= form.label :body , "Ingresa el mensaje", class:"control-label"%>
        <%= form.text_area :body, id: :message_body, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= form.label :member_id , "", class:"control-label"%>
        <%= form.select(:member_id, options_for_select(Member.where(user_id: current_user.id, team_id: @team.id).map{|s|[s.team_id]}),{},{class:"form-control"})%>
      </div>
    </div>
  
    <div class="actions">
      <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg") do %>
          <i class="icon-ok icon-white">ENVIAR</i><% end %>
    </div>
  <% end %>
</div>
</div>