<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Title</th>
      <th>Body</th>
      <th>Latutude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Meeting</th>
      <th>Document</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.member %></td>
        <td><%= message.title %></td>
        <td><%= message.body %></td>
        <td><%= message.latutude %></td>
        <td><%= message.longitude %></td>
        <td><%= message.address %></td>
        <td><%= message.meeting %></td>
        <td><%= message.document %></td>
        <td><%= message.type %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

