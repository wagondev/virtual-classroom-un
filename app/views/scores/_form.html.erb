<%= form_with(model: score, local: true) do |form| %>
  <% if score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul>
      <% score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<td>
  <div class="field">
    <%= form.number_field :value_score, id: :score_value_score %>
  </div>
</td>

<%=form.hidden_field :assignment_id, :value=> @assignment.id %>
<%@inscriptionGroup.each do |i| %>
  <%@studentGroup.each do |st|%>
    <%if i.user_id == st.id%>
      <%=form.hidden_field :inscription_id, :value=> i.id %>
    <%end%>
  <%end%>
<%end%>
  
<% end %>
