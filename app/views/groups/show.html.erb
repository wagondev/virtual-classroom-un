
<div class="container-fluid" id="grupo">
	<p id="notice"><%= notice %></p>
	  <div class="jumbotron" id="tituloGrupo">
	  	<h1 class="text-center text-uppercase">
	  		<%= @subjectGroup[0].name %>
	  	</h1>
	</div>
	<%if current_user.student == false%>
		
		<div class="row">
			<div class="col-md-6">
				<div class="panel panel-primary">
		      		<div class="panel-heading"><h4 class="text-center">Equipos de trabajo activos</h4></div>
		      			<div class="panel-body">
		      				<div class="list-group">
		      						<%@teamsAvailable.each do |team|%>
		      						<%=link_to team.name.split(@subjectGroup[0].name)[0],  team, class:"btn btn-default"%>
		      						<%end%>
		      				</div>
		      			</div>
	    			</div>
				</div>
				
		
			<div class="col-md-6 col-md-offset">
				<div class="panel panel-primary">
		      		<div class="panel-heading"><h4 class="text-center">Notas</h4></div>
		      			<div class="panel-body">
		      				<div class="list-group">
		      					<%@userInscriptionGroupAlphabetic.each do |user|%>
		      						<%=user.email%>
		      						<%end%>
		      				</div>
		   			</div>
	    		</div>
			</div>
		</div>
		
		
		<div class="row">
			<div class="col-md-1">

					<button class="btn btn-success" type="button" data-toggle="modal" data-target="#aleatorio">Crear equipos aleatorios</button>
			</div>
			
			<div class="col-md-1 col-md-offset-9">
					<%= link_to "Descargar notas", new_team_path, class: "btn  btn-success" %>
			</div>
		</div>
		

		
		<div class="row">
			<div class="col-md-1">
					<%= link_to "Crear equipos vacíos", new_team_path, class: "btn  btn-success" %>
			</div>
		</div>
		
	
		
		<div class="row">
			<div class="col-md-1">
					<button class="btn btn-success" type="button" data-toggle="modal" data-target="#ordenAlfabetico">Crear equipos por orden alfabético</button>
			</div>
		</div>
	

</div>

<div id="ordenAlfabetico" class="modal fade" role="">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center"><strong>Crear equipos por orden alfabético</strong></h4>
      </div>
      <div class="modal-body">
      	<div class="container">
      		<div class="row col-md-4 col-md-offset-1">
 
      			<%= form_tag ("/groups/createTeams")  do %>
				  <%=label_tag "minNumber","Numero minimo de estudiantes", class: "control-label"%>
				  <%= number_field_tag "minNumber",nil ,class:'form-control' %>
				<%=label_tag "maxNumber","Numero maximo de estudiantes", class: "control-label"%>
				  <%= number_field_tag "maxNumber",nil,class:'form-control' %>
				  <%= hidden_field_tag(:numberGroup, @group.id)%>
				  <br>
				 <%= button_tag(type: 'submit', class: "btn btn-save-team") do %>
          <i class="icon-ok icon-white">Crear equipo</i><% end %>
				 <% end %>
      		</div>
      	</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<div id="aleatorio" class="modal fade" role="">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center"><strong>Crear equipos de forma aleatoria</strong></h4>
      </div>
      <div class="modal-body">
      	<div class="container">
      		<div class="row col-md-4 col-md-offset-1">
 
      			<%= form_tag ("/groups/createTeamsRandom")  do %>
				  <%=label_tag "minNumber","Numero minimo de estudiantes", class: "control-label"%>
				  <%= number_field_tag "minNumber",nil ,class:'form-control' %>
				<%=label_tag "maxNumber","Numero maximo de estudiantes", class: "control-label"%>
				  <%= number_field_tag "maxNumber",nil,class:'form-control' %>
				  <%= hidden_field_tag(:numberGroup, @group.id)%>
				  <br>
				 <%= button_tag(type: 'submit', class: "btn btn-save-team") do %>
          <i class="icon-ok icon-white">Crear equipo</i><% end %>
				 <% end %>
      		</div>
      	</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
		
	<%end%>
