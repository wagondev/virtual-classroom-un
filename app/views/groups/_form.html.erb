<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :group_name %>
  </div>
  
  <div class="form-group ">
    <div class="field">
      <%= form.label :subject,"Materia a la que se vincula el grupo", class:"label-control" %><br />
      <%= form.select(:subject, Subject.all.collect {|a| [a.name, a.id]}, {},{class:"form-control"})%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
