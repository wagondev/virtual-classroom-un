
	<% if current_user.name == nil || current_user.name == ''%>
	<% n = current_user.email.split('@') %>
	<% else %>
	<% n = current_user.name.split %>
	<% end %>
	<% n = n[0] %>
	<div class="container-fluid">
		<div class="row" id="encabezadoBienvenida">
	<div class="row col-md-12">
		<h1 class="text-center"><strong>Bienvenido, <%=n%></strong> </h1>
	</div>
			<div class="col-md-2 col-md-offset-5">
			<%if current_user.photo.present? == true %>
				<%= image_tag(current_user.photo_url, class:"img-responsive img-thumbnail") %> 
			<% else %>
				<% if current_user.student == false %>
					<%= image_tag("teacher512.png", class:"img-responsive img-rounded") %>
				<%else%>
					<%= image_tag("student512.png", class:"img-responsive img-rounded") %>
				<%end%>
			<% end %>
			</div>
		</div>
	
		<div class="row" id="cuerpoHomeUser">
			<br>
			<br>
		<div class="col-md-6" id="materiasInscritas">
			<div class="panel panel-primary">
			<div class="panel-heading text-center">
				<% if current_user.student == false %>
					<h4>Materias que enseñas</h4>
				<% end %>
				<% if current_user.student == true %>
					<h4>Materias en las que estás inscrito</h4>
				<% end %>
			</div>
			<div class="panel-body">
				
				<div class="list-group text-center">
					<% @subjectsUser.each do |subject| %>
					<%g = Group.joins(:inscriptions).where(inscriptions:{user_id: current_user.id}, groups:{subject_id: subject.id})%>
					<%if g.length == 1 %>
						<%= link_to subject.name, g[0] , class: "list-group-item list-group-item-info" %>
					<%end%>
					<%end%>
	
				</div>
			<%= will_paginate @subjectsUser %>
			</div>
			
			</div>
		</div>
		<div class="col-md-6">
			<div class="panel panel-primary">
				<div class="panel-heading text-center" id="encabezadoPanel">
					<h4>Grupos libres que a los que te has unido</h4>
				</div>
				<div class="panel-body text-center">
					<% @freeTeamsIn.each  do |team|%>
						<%=link_to team.name, team, class: "list-group-item list-group-item-info"%>
					<%end%>
				</div>
				
			</div>
		</div>
		<div class="row">
			<div class="col-md-3 col-md-offset-7">
			
						<%= link_to "Crear un grupo libre", new_team_path, class: "btn  btn-success" %>
						<%= link_to "Unirte a un grupo", teams_path, class: "btn btn-success" %>
			</div>
			</div>
		</div>
	</div>
	</div>
	
