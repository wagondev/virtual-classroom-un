<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Nident</th>
      <th>Name</th>
      <th>Administrator</th>
      <th>Isstudent</th>
      <th>Owner</th>
      <th>Gender</th>
      <th>Career</th>
      <th>City</th>
      <th>Aboutme</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.nident %></td>
        <td><%= person.name %></td>
        <td><%= person.administrator %></td>
        <td><%= person.isStudent %></td>
        <td><%= person.owner %></td>
        <td><%= person.gender %></td>
        <td><%= person.career %></td>
        <td><%= person.city %></td>
        <td><%= person.aboutme %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

