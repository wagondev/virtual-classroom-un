<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Idteacher</th>
      <th>Name</th>
      <th>Birth day</th>
      <th>City</th>
      <th>Ocupation</th>
      <th>Career</th>
      <th>Preferences</th>
      <th>About me</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.idTeacher %></td>
        <td><%= teacher.name %></td>
        <td><%= teacher.birth_day %></td>
        <td><%= teacher.city %></td>
        <td><%= teacher.ocupation %></td>
        <td><%= teacher.career %></td>
        <td><%= teacher.preferences %></td>
        <td><%= teacher.about_me %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

